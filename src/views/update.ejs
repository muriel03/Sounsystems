<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SoundSystem</title>
  <link rel="stylesheet" href="css/styles.css">
  <script src="https://kit.fontawesome.com/eb0bcfcb68.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="/css/stylesLogin.css" />
  <link rel="stylesheet" href="/css/styles.css">
  <link
    href="https://fonts.googleapis.com/css2?family=Krub:wght@400;700&family=Montserrat&family=Roboto:ital,wght@1,100&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="../public/css/normalize.css">
  <link rel="icon" href="images/favicommm.svg">
</head>

<body>
  <%- include('partials/header') %>
    <main>
      <section class="cartContainer">
        <h1>Productos Destacados</h1>
        <% for(i=0; i < products.length; i++) { %>
          <a href="productDetail">
            <section class="product">
              <div class="imgContainer">
                <img src="images/<%= products[i].img %>" alt="<%= products[i].name %>" />
              </div>
              <div class="productInfo">
                <h3>
                  <%= products[i].name %>
                </h3>
                <h4>
                  <%= products[i].category %>
                </h4>
              </div>
          </a>
      </section>
      <% } %>
        </section>
    </main>

    <%- include('partials/footer') %>
</body>

</html>