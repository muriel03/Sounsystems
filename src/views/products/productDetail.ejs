                  <li id="comprar"> <a href="shoppingCart" class="btn">Eliminar Producto</a></li>
                </form> -->
        </div>
      </div>
      </div>
    </section>
    </div>
    </section>
    <!-- Footer -->
    <%- include('../partials/footer') %>
</body>

</html>