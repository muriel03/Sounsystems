<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit product</title>
    <script
      src="https://kit.fontawesome.com/eb0bcfcb68.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/newProduct.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- header -->
    <%- include('../partials/header') %>

    <main class="newProduct">
      <section class="fomrContainer">
        <form action="/update/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <h1>Edit product</h1>
          <ul class="is-invalid"></ul><br>
          <label for="productName">Product name:</label>
          <input type="text" id="name" name="name" value="<%= productToEdit.name %>" />
          <small class="is-invalid" id="nameError"></small>
          <% if (locals.errors && errors.name) { %>
            <div class="text-danger">
              <%= errors.name.msg %>
            </div>
          <% } %>
          <label for="description">Description:</label>
          <textarea
            name="description"
            id="description"
            cols="30"
            rows="10"
            placeholder="info Product"
          ><%= productToEdit.description %></textarea>
          <small class="is-invalid" id="descriptionError"></small>
          <% if (locals.errors && errors.description) { %>
            <div class="text-danger">
              <%= errors.description.msg %>
            </div>
          <% } %>
          <label for="productImg" class="productImgLabel">Product images:</label>
          <input type="file" id="productImg" name="productImg" />
          <% if (locals.errors && errors.img) { %>
            <div class="text-danger">
              <%= errors.img.msg %>
            </div>
          <% } %>
          <small id="imageError"></small>
          <div>
            <h2>Category:</h2>
            <select for="" name="category_id">
              <% for(let i = 0; i < categoryList.length; i++) {%>
                <option value= "<%= categoryList[i].id %>"><%= categoryList[i].name %></option>
              <% } %>
            </select>
          </div>
          <div>
            <h2>Brand:</h2>
            <select for="" name="brand_id">
              <% for(let i = 0; i < brandList.length; i++) {%>
                <option value= "<%= brandList[i].id %>"><%= brandList[i].name %></option>
              <% } %>
            </select>
          </div>
          <label for="productPrice">Price:</label>
          <input type="text" id="price" name="price" value="<%= productToEdit.price %>" />
          <small class="is-invalid" id="priceError"></small>
          <% if (locals.errors && errors.price) { %>
            <div class="text-danger">
              <%= errors.price.msg %>
            </div>
          <% } %>
          <label for="discount">Discount:</label>
          <input type="number" id="discount" name="discount" min="0" max="99"  value="<%= productToEdit.discount %>"/>
          <% if (locals.errors && errors.discount) { %>
            <div class="text-danger">
              <%= errors.discount.msg %>
            </div>
          <% } %>
          <button type="submit" >Edit product</button>
        </form>
        <div class="addImg  editImg"></div>
      </section>
    </main>
    <script src="/js/productsValidations.js"></script>
    <!-- footer -->
    <%- include('../partials/footer') %>
  </body>
</html>
