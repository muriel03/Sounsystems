<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopping Cart</title>
    <script
      src="https://kit.fontawesome.com/eb0bcfcb68.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/shoppingCart.css" />
  </head>

  <body>
    <!-- header -->
    <%- include('../partials/header') %>

    <section class="cartContainer">
      <h1>Shopping list</h1>
      <%- include('../partials/shoppingCartProduct', {products}) %>
    </section>
    <section class="payment">
      <section class="container">
        <form action="" name="payment">
          <h2>Payment info</h2>
          <label for="name">Name:</label>
          <input type="text" name="paymet" id="name" />
          <label for="adress">Adress:</label>
          <input type="text" name="paymet" id="adress" />
          <label>Card type:</label>
          <div>
            <label for="credit">Credit:</label>
            <input type="radio" name="paymet" id="credit" value="Credit" />
            <label for="debit">Debit:</label>
            <input type="radio" name="paymet" id="debit" value="debit" />
          </div>
          <label for="Card">Card number:</label>
          <input type="text" name="paymet" id="Card" />
          <span>
            <p>Total:</p>
            <h2>$999.999</h2>
          </span>
          <button type="submit">Pay</button>
        </form>
        <div class="paymentImg"></div>
      </section>
    </section>

    <!-- footer -->
    <%- include('../partials/footer') %>
  </body>
</html>
